  "styles": [
    "css/common-colors/color-declare.css",
    "css/bunkers-and-badasses.css",
    "css/common-colors/attack-colors.css",
    "css/common-colors/elemental-colors.css",
    "css/common-colors/rarity-colors.css",
    "css/generic.css",
    "css/elemental.css",
    "css/health.css",
    "css/dropdown.css",
    "css/header/health.css",
    "css/header/xp-bar.css"
