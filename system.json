  "version": "0.3.0",
  "compatibleCoreVersion": "10",
  "compatibility": {
    "minimum": 10,
    "verified": 10.285,
    "maximum": 10
  },
  "templateVersion": 2,
  "authors": [{
    "name": "Nic Pereira",
    "email": "BadassBunks@nicpereira.dev",
    "discord": "emf#0016"
  }],
  "scripts": [],
  "esmodules": ["module/bunkers-and-badasses.mjs"],
  "styles": [
    "css/bunkers-and-badasses.css",
    "css/generic.css",
    "css/health.css",
    "css/dropdown.css",
    "css/header/health.css",
    "css/header/xp-bar.css"
  ],
  "packs": [{
    "name": "loot",
    "label": "Unique Loot",
