  "description": "Badasses, loot, and mayhem. This system is for running the tabletop adaptation of Borderlands' 'Bunkers & Badasses' by Nerdvana.",
  "version": "0.1.4",
  "minimumCoreVersion": "9",
  "compatibleCoreVersion": "9",
  "templateVersion": 2,
  "author": "Nic Pereira",
  "authors": [{
    "name": "Nic Pereira",
    "email": "BadassBunks@nicpereira.dev",
    "discord": "emf#0016"
  }],
  "scripts": [],
  "esmodules": ["module/bunkers-and-badasses.mjs"],
  "styles": [
    "css/bunkers-and-badasses.css",
    "css/generic.css",
    "css/health.css",
    "css/dropdown.css",
    "css/header/health.css",
    "css/header/xp-bar.css"
  ],
  "packs": [
    {
      "name": "loot",
      "label": "Unique Loot",
      "path": "packs/loot.db",
      "entity": "Item"
